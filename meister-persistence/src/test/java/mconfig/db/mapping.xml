<?xml version="1.0" encoding="UTF-8"?>
<mapping>
	<class name="org.xiaotian.persistence.db.DBConnectionConfig" identity="id" auto-complete="true">
		<map-to xml="datasource" />
		<field name="id" type="string">
			<bind-xml name="id" node="attribute" />
		</field>
		<field name="url" type="string">
			<bind-xml name="url" node="element" />
		</field>
		<field name="username" type="string">
			<bind-xml name="username" node="element" />
		</field>
		<field name="password" type="string">
			<bind-xml name="password" node="element" />
		</field>
		<field name="maxActive" type="integer">
			<bind-xml name="maxActive" node="element" />
		</field>
		<field name="maxIdle" type="integer">
			<bind-xml name="maxIdle" node="element" />
		</field>
		<field name="minIdle" type="integer">
			<bind-xml name="minIdle" node="element" />
		</field>
		<field name="initialSize" type="integer">
			<bind-xml name="initialSize" node="element" />
		</field>
		<field name="maxWait" type="integer">
			<bind-xml name="maxWait" node="element" />
		</field>
		<field name="validationQuery" type="string">
			<bind-xml name="validationQuery" node="element" />
		</field>
		<field name="jmxEnabled" type="boolean">
			<bind-xml name="jmxEnabled" node="element" />
		</field>
		<field name="maxAge" type="long">
			<bind-xml name="maxAge" node="element" />
		</field>
	</class>
</mapping>